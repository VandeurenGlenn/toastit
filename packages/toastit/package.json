{
	"name": "toastit",
	"version": "0.0.4",
	"type": "module",
	"main": "index.js",
	"scripts": {
		"build": "wireit",
		"build:ts": "wireit",
		"build:move-declarations": "wireit"
	},
	"wireit": {
		"build": {
			"dependencies": [
				"build:ts",
				"build:esbuild"
			]
		},
		"build:ts": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"src",
				"tsconfig.json"
			],
			"output": [
				"out/index.d.ts",
				"out/index.js"
			]
		},
		"build:move-declarations": {
			"command": "shx mv ./out/**/*.d.ts .",
			"dependencies": [
				"build:ts"
			],
			"files": [
				"out/**/*.d.ts"
			],
			"output": [
				"*.d.ts"
			]
		},
		"build:esbuild": {
			"command": "node esbuild.config.js",
			"dependencies": [
				"build:ts",
				"build:move-declarations"
			],
			"files": [
				"out/index.js",
				"esbuild.config.js"
			],
			"output": [
				"index.js"
			]
		}
	},
	"files": [
		"index.d.ts",
		"index.js",
		"index.js.LEGAL.txt"
	],
	"devDependencies": {
		"lit": "^2.7.6"
	}
}
