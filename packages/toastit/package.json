{
	"name": "toastit",
	"version": "0.1.0",
	"type": "module",
	"main": "index.js",
	"scripts": {
		"build:end": "wireit",
		"build": "wireit",
		"build:rollup": "node .build/logtime.js && rollup -c && npm run build:move-declarations && node .build/logtime.js --end",
		"build:ts": "wireit",
		"build:move-declarations": "wireit"
	},
	"wireit": {
		"build": {
			"dependencies": [
				"build:ts",
				"build:esbuild"
			],
			"command": "npm run build:end"
		},
		"build:ts": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"src",
				"tsconfig.json"
			],
			"output": [
				"out/index.d.ts",
				"out/index.js"
			],
			"dependencies": [
				"build:start"
			]
		},
		"build:move-declarations": {
			"command": "shx mv ./out/**/*.d.ts .",
			"dependencies": [
				"build:ts"
			],
			"files": [
				"out/**/*.d.ts"
			],
			"output": [
				"*.d.ts"
			]
		},
		"build:start": {
			"command": "node .build/logtime.js"
		},
		"build:end": {
			"command": "node .build/logtime.js --end"
		},
		"build:esbuild": {
			"command": "node esbuild.config.js",
			"dependencies": [
				"build:ts",
				"build:move-declarations"
			],
			"files": [
				"out/index.js",
				"esbuild.config.js"
			],
			"output": [
				"index.js"
			]
		}
	},
	"files": [
		"index.d.ts",
		"index.js",
		"index.js.LEGAL.txt"
	],
	"devDependencies": {
		"@rollup/plugin-typescript": "^11.1.2",
		"lit": "^2.7.6",
		"rollup": "^3.26.2",
		"tslib": "^2.6.0"
	}
}
